<VBox fx:id="program" prefHeight="666.0" prefWidth="1006.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cdsre.CDSREController">
  <children>
    <MenuBar fx:id="menubar" VBox.vgrow="NEVER">
      <menus>
        <Menu fx:id="menu_file" mnemonicParsing="false" text="File">
          <items>
            <MenuItem fx:id="menuitem_open" mnemonicParsing="false" onAction="#openFile" text="Open">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            <Menu fx:id="menu_openrecent" mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="menuitem_close" mnemonicParsing="false" text="Close" />
            <MenuItem fx:id="menuitem_saverom" mnemonicParsing="false" text="Save ROM" />
            <MenuItem fx:id="menuitem_saveas" mnemonicParsing="false" text="Save As…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="menuitem_prefs" mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="menuitem_quit" mnemonicParsing="false" onAction="#quit" text="Quit">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
          </items>
        </Menu>
        <Menu fx:id="menu_edit" mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem fx:id="menuitem_undo" mnemonicParsing="false" text="Undo">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="Z" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            <MenuItem fx:id="menuitem_redo" mnemonicParsing="false" text="Redo">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
          </items>
        </Menu>
            <Menu fx:id="menu_view" mnemonicParsing="false" text="View">
               <items>
                  <MenuItem fx:id="menuitem_viewmapheaders" mnemonicParsing="false" onAction="#switchView" text="Map Headers" />
                  <MenuItem fx:id="menuitem_viewmatrix" mnemonicParsing="false" onAction="#switchView" text="Matrix Editor" />
                  <MenuItem fx:id="menuitem_viewmap" mnemonicParsing="false" onAction="#switchView" text="Map Editor" />
                  <MenuItem fx:id="menuitem_viewtext" mnemonicParsing="false" onAction="#switchView" text="Text Editor" />
                  <MenuItem fx:id="menuitem_viewscript" mnemonicParsing="false" onAction="#switchView" text="Script Editor">
                     <accelerator>
                        <KeyCodeCombination alt="DOWN" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem fx:id="menuitem_viewevent" mnemonicParsing="false" onAction="#switchView" text="Event Editor" />
               </items>
            </Menu>
        <Menu fx:id="menu_help" mnemonicParsing="false" text="Help">
          <items>
            <MenuItem fx:id="menuitem_about" mnemonicParsing="false" onAction="#openLink" text="About" />
                  <MenuItem fx:id="menuitem_discord" mnemonicParsing="false" onAction="#openLink" text="Discord" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <SplitPane fx:id="main" dividerPositions="0.18930957683741648, 0.799554565701559" focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <items>
        <AnchorPane fx:id="leftpanel" />
        <ScrollPane fx:id="view" prefHeight="-1.0" prefWidth="-1.0" />
        <AnchorPane fx:id="rightpanel" />
      </items>
    </SplitPane>
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
      <children>
        <Label fx:id="leftstatus" maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Left status" HBox.hgrow="ALWAYS">
          <font>
            <Font size="11.0" fx:id="x3" />
          </font>
          <textFill>
            <Color blue="0.625" green="0.625" red="0.625" fx:id="x4" />
          </textFill>
        </Label>
        <Pane fx:id="bottom" prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
        <Label fx:id="rightstatus" font="$x3" maxWidth="-1.0" text="Right status" textFill="$x4" HBox.hgrow="NEVER" />
      </children>
      <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </padding>
    </HBox>
  </children>
</VBox>
